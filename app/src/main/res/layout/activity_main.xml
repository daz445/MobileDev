<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/box_mass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_pedding"
        android:layout_marginTop="@dimen/size_name_box"
        android:text="@string/text_mes_box"
        android:textSize="@dimen/size_name_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/mess_text"
        android:layout_width="@dimen/weight_box"
        android:layout_height="@dimen/height_box"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:hint="@string/text_mess_hint"
        android:textSize="@dimen/size_name_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_mass_text" />

    <TextView
        android:id="@+id/box_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:layout_marginStart="@dimen/left_pedding"
        android:text="@string/text_button"
        android:textSize="@dimen/size_name_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mess_text" />

    <EditText
        android:id="@+id/text_button"
        android:layout_width="@dimen/weight_box"
        android:layout_height="@dimen/height_box"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:hint="@string/text_button_hint"
        android:textSize="@dimen/size_name_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_button_text" />
    <TextView
        android:id="@+id/box_color_back_rgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:layout_marginStart="@dimen/left_pedding"
        android:text="@string/box_back"
        android:textSize="@dimen/size_name_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_button" />

    <SeekBar
    android:id="@+id/Rback"
    android:min="0"
    android:max="255"

    android:progress="3"

    android:layout_width="@dimen/size_seek"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/up_box_pedding"
    android:layout_marginStart="@dimen/left_pedding"
    android:text="@string/box_back"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/box_color_back_rgb"
    />

    <SeekBar
        android:id="@+id/Gback"
        android:layout_width="@dimen/size_seek"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_pedding"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:max="255"
        android:min="0"
        android:text="@string/box_back"
        app:layout_constraintStart_toEndOf="@+id/Rback"
        app:layout_constraintTop_toBottomOf="@+id/box_color_back_rgb" />

    <SeekBar
        android:id="@+id/Bback"
        android:layout_width="@dimen/size_seek"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_pedding"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:max="255"
        android:min="0"
        android:text="@string/box_back"
        app:layout_constraintStart_toEndOf="@+id/Gback"
        app:layout_constraintTop_toBottomOf="@+id/box_color_back_rgb" />

    <TextView
        android:id="@+id/box_color_text_rgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:layout_marginStart="@dimen/left_pedding"
        android:text="@string/text_color_rgb"
        android:textSize="@dimen/size_name_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rback" />

    <SeekBar
        android:id="@+id/Rtext"
        android:min="0"
        android:max="255"
        android:layout_width="@dimen/size_seek"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:layout_marginStart="@dimen/left_pedding"
        android:text="@string/box_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_color_text_rgb"
        />

    <SeekBar
        android:id="@+id/Gtext"
        android:layout_width="@dimen/size_seek"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_pedding"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:max="255"
        android:min="0"
        android:text="@string/box_back"
        app:layout_constraintStart_toEndOf="@+id/Rtext"
        app:layout_constraintTop_toBottomOf="@+id/box_color_text_rgb" />

    <SeekBar
        android:id="@+id/Btext"
        android:layout_width="@dimen/size_seek"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_pedding"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:max="255"
        android:min="0"
        android:text="@string/box_back"
        app:layout_constraintStart_toEndOf="@+id/Gtext"
        app:layout_constraintTop_toBottomOf="@+id/box_color_text_rgb" />
    <TextView
        android:id="@+id/box_color_button_rgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:layout_marginStart="@dimen/left_pedding"
        android:text="@string/text_color_box"
        android:textSize="@dimen/size_name_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rtext" />

    <SeekBar
        android:id="@+id/Rbutton"
        android:min="0"
        android:max="255"
        android:layout_width="@dimen/size_seek"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:layout_marginStart="@dimen/left_pedding"
        android:text="@string/box_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_color_button_rgb"
        />

    <SeekBar
        android:id="@+id/Gbutton"
        android:layout_width="@dimen/size_seek"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_pedding"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:max="255"
        android:min="0"
        android:text="@string/box_back"
        app:layout_constraintStart_toEndOf="@+id/Rbutton"
        app:layout_constraintTop_toBottomOf="@+id/box_color_button_rgb" />

    <SeekBar
        android:id="@+id/Bbutton"
        android:layout_width="@dimen/size_seek"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_pedding"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:max="255"
        android:min="0"
        android:text="@string/box_back"
        app:layout_constraintStart_toEndOf="@+id/Gbutton"
        app:layout_constraintTop_toBottomOf="@+id/box_color_button_rgb" />

    <Button
        android:id="@+id/send_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_box"
        android:layout_marginTop="@dimen/up_box_pedding"
        android:text="@string/show"
        android:textSize="@dimen/size_name_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Gbutton" />

</androidx.constraintlayout.widget.ConstraintLayout>